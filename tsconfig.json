{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    // "types": [
    //   "node",
    //   "vite/client"
    // ]
  },

  "include": [
    "features/**/*.ts",
    "test/**/*.ts",
    "src",
    "vite.config.ts"
  ],

  "exclude": [
    "node_modules"
  ]
}
