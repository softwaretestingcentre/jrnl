{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2019",
    "lib": ["es2019", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
    "types": [
      "node",
      "vite/client"
    ]
  },

  "include": [
    "features/**/*.ts",
    "test/**/*.ts",
    "src",
    "vite.config.ts",
    "server.js"
  ],

  "exclude": [
    "node_modules"
  ]
}
